@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="jumbotron">
  <h2>Client List</h2>
</div>
<div class="container">
  @if (@Model.Count == 0)
  {
    <h4>No Clients have been added</h4>
  }
  else
  {
    <table class="sTable table table-responsive-md table-hover">
      <thead>
        <tr>
          <th>Client</th>
          <th>Pronouns</th>
          <th>Current Stylist</th>
        </tr>
      </thead>
    @foreach (Client client in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td> 
        <td>@client.Pronoun</td>
        <td>@Html.ActionLink($"{@client.Stylist.Name}", "Details", new {id = client.Stylist.StylistId })</td>
      </tr>
    }
  </table>
  }
  <div class="buttonCenter">
    @Html.ActionLink("Add More Clients", "Create", "Clients", null, new { @class="htmlButton" })
    @Html.ActionLink("Stylist List", "Index", "Stylists", null, new { @class="htmlButton" })
    @Html.ActionLink("Home", "Index", "Home", null, new { @class="htmlButton" })
  </div>
</div>