@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="jumbotron">
  <h2>Client List</h2>
</div>
<div class="container">
  @if (@Model.Count == 0)
  {
    <h4>No Clients have been added</h4>
  }
  else
  {
    <table>
    <tr>
      <th>Client</th>
      <th>Pronouns</th>
      <th>Current Stylist</th>
    </tr>
    @foreach (Client client in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td> 
        <td>@client.Pronoun</td>
        <td>@client.Stylist.Name </td>
      </tr>
    }
  </table>
  }

  <p>@Html.ActionLink("Add More Clients", "Create", "Clients")</p>
  <p>@Html.ActionLink("Add More Stylists", "Create", "Stylists")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>