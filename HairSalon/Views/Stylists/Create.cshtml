@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h2>Add a new Stylist</h2>
</div>
<div class="container">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.DateHired)
    @Html.TextBoxFor(model => model.DateHired)

    <input class="htmlButton" type="submit" value="Add a new Stylist" />
  }
  <br>
  <br>
  @Html.ActionLink("Stylist List", "Index", "Stylists", null, new { @class="htmlButton"})
</div>