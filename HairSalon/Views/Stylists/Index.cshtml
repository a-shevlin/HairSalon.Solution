@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="container">
  <h2>Stylists</h2>

  @if (@Model.Count == 0)
  {
    <h4>No Stylists have been added</h4>
  }
  
  <table>
    <tr>
      <th>Stylist</th>
      <th>Stylist Hire Date</th>
    </tr>
    @foreach (Stylist stylist in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
        <td>@stylist.DateHired</td>
      </tr>
    }
  </table>
  <p>@Html.ActionLink("Add a new Stylist", "Create", "Stylists")</p>
  <p>@Html.ActionLink("Add a new Client", "Create", "Clients")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
