@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="jumbotron">
  <h2>Stylists</h2>
</div>
<div class="container">
  @if (@Model.Count == 0)
  {
    <h4>No Stylists have been added</h4>
  }
  else
  {
    <table class="sTable table table-responsive-md table-hover">
      <thead>
        <tr>
          <th>Stylist</th>
          <th>Stylist Hire Date</th>
        </tr>
      </thead>
    @foreach (Stylist stylist in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
        <td>@stylist.DateHired</td>
      </tr>
    }
  </table>
  }
  <div class="buttonCenter">
    @Html.ActionLink("Add a new Stylist", "Create", "Stylists", null, new { @class="htmlButton"})
    @Html.ActionLink("Add a new Client", "Create", "Clients", null, new { @class="htmlButton"})
    <br>
    <br>
    @Html.ActionLink("Client List", "Index", "Clients", null, new { @class="htmlButton" })
    @Html.ActionLink("Home", "Index", "Home", null, new { @class="htmlButton"})
  </div>  
</div>
