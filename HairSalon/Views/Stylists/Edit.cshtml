@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h2>Edit stylist @Model.Name</h2>
</div>
<div class="container">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.LabelFor(model => model.DateHired)
    @Html.EditorFor(model => model.DateHired)

    <input type="submit" value="Save"/>
  }
  <p>@Html.ActionLink("Back to Stylists", "Index")</p>
</div>